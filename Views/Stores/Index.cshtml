@model IEnumerable<сoursework.Data.Models.Store>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Таблица Stores</h1>

<p>
    <a class="button-action" asp-action="Create">Добавить новый книжный магазин</a>
</p>
<br />
<table class="Table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Адресс
            </th>
            <th>
                Площадь
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.area)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Изменить</a> <br />
                    <a asp-action="Delete" asp-route-id="@item.id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
