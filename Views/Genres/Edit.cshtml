@model сoursework.Data.Models.Genre

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1>Изменение</h1>

<h4>Жанр</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="titleGenre" class="control-label">Наименование жанра</label>
                <input asp-for="titleGenre" class="form-control" />
                <span asp-validation-for="titleGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

