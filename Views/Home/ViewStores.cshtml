@model HomeViewModel
@{
    Layout = "_Layout";
}
<h1>Информация о магазинах</h1>
<hr />
<table class="Table">
    <thead>
        <tr>
            <th>Адрес магазина</th>
            <th>Сотрудники магазина</th>
            <th>Книги магазина и их количество</th>
        </tr>
    </thead>
    <tbody id="tbody">
        @{
            foreach (var store in Model.bookRep.GetStores().Result)
            {
                <tr>
                    <td>
                        @store.address
                    </td>
                    <td>
                        <ul>
                            @foreach (var employee in @Model.bookRep.GetEmployeesThis(store).Result)
                            {
                                <li>@employee.surname</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var book in @Model.bookRep.GetBooksThis(store).Result)
                            {
                                <li>@book.title - @book.quantity шт.</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>