@model HomeViewModel
@{
    Layout = "_Layout";
}
<h1>Авторы и их книги</h1>
<hr />
<table class="Table">

    <thead>
        <tr>
            <th>ФИО автора</th>
            <th>Книги автора</th>
        </tr>
    </thead>
    <tbody id="tbody">
        @{
            foreach (var author in Model.bookRep.GetAuthors().Result)
            {
                <tr>
                    <td>
                        @author.name
                        @author.patronymic
                        @author.surname
                    </td>
                    <td>
                        <ul>
                            @foreach (var book in Model.bookRep.GetBooksThis(author).Result)
                            {
                                <li>@book.title</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
