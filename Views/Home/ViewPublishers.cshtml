@model HomeViewModel
@{
    Layout = "_Layout";
}
<h1>Издатели и их книги</h1>
<hr />
<table class="Table">
    <thead>
        <tr>
            <th>Директор</th>
            <th>Почта</th>
            <th>Адрес</th>
            <th>Книги издателя</th>
        </tr>
    </thead>
    <tbody id="tbody">
        @{
            foreach (var publisher in Model.bookRep.GetPublishers().Result)
            {
                <tr>
                    <td>
                        @publisher.director
                    </td>
                    <td>
                        @publisher.email
                    </td>
                    <td>
                        @publisher.address
                    </td>
                    <td>
                        <ul>
                            @foreach (var book in @Model.bookRep.GetBooksThis(publisher).Result)
                            {
                                <li>@book.title</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>