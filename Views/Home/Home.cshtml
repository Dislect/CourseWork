@model HomeViewModel

@{
    Layout = "_Layout";
}

<style>
    .brd {
        border:1px solid black;
        margin-top:5px;
    }
</style>

@{
    foreach (HierarchicalMenuItem hItem in Model.menu.menuItems)
    {
    <div align="center">

        <div class="brd">

            <h5>
                @hItem.GetTitle()
            </h5>

            @foreach (var item in hItem.menuItems)
            {
                <li>@item.GetTitle()</li>
            }

        </div>
    </div>
    }
}