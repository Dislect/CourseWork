@model IEnumerable<сoursework.Data.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Таблица Authors</h1>

<p>
    <a class="button-action" asp-action="Create">Добавить нового автора</a>
</p>
<br />
<table class="Table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Имя
            </th>
            <th>
                Фамилия
            </th>
            <th>
                Отчество
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.patronymic)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Изменить</a> <br />
                    <a asp-action="Delete" asp-route-id="@item.id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-md-4">
        <form id="form1">
            <div class="form-group">
                <input type="text" id="name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="text" id="surname" class="form-control" />
            </div>
            <div class="form-group">
                <input type="text" id="patronymic" class="form-control" />
            </div>
            <div class="form-group">
                <input style="width: 25px" id="zxc" type="button"/>
            </div>
        </form>
    </div>
</div>

