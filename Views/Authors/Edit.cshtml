@model сoursework.Data.Models.Author

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1>Изменение</h1>

<h4>Автор</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div><br>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="name" class="control-label">Имя</label><br>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="surname" class="control-label">Фамилия</label><br>
                <input asp-for="surname" class="form-control" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="patronymic" class="control-label">Отчество</label><br>
                <input asp-for="patronymic" class="form-control" />
                <span asp-validation-for="patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="button-action" asp-action="Index">Вернуться назад</a>
</div>

