@model сoursework.Data.Models.ObjectsDB.Position

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменение</h1>

<h4>Должность</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="employeePosition" class="control-label">Должность</label><br>
                <input asp-for="employeePosition" class="form-control" />
                <span asp-validation-for="employeePosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="salary" class="control-label">Зарплата</label><br>
                <input asp-for="salary" class="form-control" />
                <span asp-validation-for="salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="button-action" asp-action="Index">Вернуться назад</a>
</div>

