@model IEnumerable<сoursework.Data.Models.ObjectsDB.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Таблица Employee</h1>

<p>
    <a class="button-action" asp-action="Create">Добавить нового сотрудника</a>
</p>
<br />
<table class="Table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Имя
            </th>
            <th>
                Фамилия
            </th>
            <th>
                Отчество
            </th>
            <th>
                Путь к фото
            </th>
            <th>
                Альтернативный текст
            </th>
            <th>
                Номер телефона
            </th>
            <th>
                Должность
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.imgPath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.imgAlterText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.idPosition.employeePosition)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Изменить</a> <br />
                    <a asp-action="Delete" asp-route-id="@item.id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
