@model сoursework.Data.Models.ObjectsDB.Employee

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1>Создание</h1>

<h4>Сотрудник</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label">Имя</label><br>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="surname" class="control-label">Фамилия</label><br>
                <input asp-for="surname" class="form-control" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="patronymic" class="control-label">Отчество</label><br>
                <input asp-for="patronymic" class="form-control" />
                <span asp-validation-for="patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imgPath" class="control-label">Путь к фото</label><br>
                <input asp-for="imgPath" class="form-control" />
                <span asp-validation-for="imgPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imgAlterText" class="control-label">Альтернативный текст</label><br>
                <input asp-for="imgAlterText" class="form-control" />
                <span asp-validation-for="imgAlterText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phoneNumber" class="control-label">Номер телефона</label><br>
                <input asp-for="phoneNumber" class="form-control" />
                <span asp-validation-for="phoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="storeId" class="control-label">ID Книжного магазина</label><br>
                <input name="storeId" type="number" class="form-control" />
            </div>
            <div class="form-group">
                <label for="positionId" class="control-label">ID Должности</label><br>
                <input name="positionId" type="number" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

